{
  "name": "gamecalc",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "npm run generate && tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "format": "prettier --write .",
    "generate": "tsx --tsconfig tsconfig.app.json generateFiles.ts",
    "watch": "chokidar src/data/MedievalDynasty/items.ts src/data/MedievalDynasty/recipes.ts generateFiles.ts -c 'npm run generate'",
    "dev:watch": "concurrently -p none \"npm run watch\" \"npm run dev\"",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/papaparse": "^5.3.14",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "deep-diff": "^1.0.2",
    "file-saver": "^2.0.5",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/deep-diff": "^1.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.5.5",
    "@types/p-limit": "^2.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-istanbul": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^25.0.1",
    "p-limit": "^6.1.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-plugin-commonjs": "^0.10.3",
    "vitest": "^2.1.1",
    "vitest-fail-on-console": "^0.7.1"
  },
  "prettier": {
    "filepath": "src/**/*.{js,jsx,ts,tsx,json,css,scss,html}",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
